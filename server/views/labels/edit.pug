extends ../layouts/application.pug

block header
  = t('layouts.application.labelEdit')

block content
  +formFor()(action=`/labels/${label.id}` method='post')
    +input(label, 'name', errors)(type="text")
    input(type="hidden" name="_method" value="PATCH")
    +submit(label)(value=t('views.labels.update'))