extends ../layouts/application.pug

block content
  h1.display-4.fw-bold.mt-4= t('layouts.application.labels')
  a.btn.btn-primary.me-1(href=`/labels/new`)= t('views.labels.createLabel')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name 
          td= formatDate(label.createdAt)
          td
            .d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=`/labels/${label.id}/edit`)= t('views.labels.update')
              +buttonTo(`/labels/${label.id}`, 'delete')(class="btn btn-danger" value=t('views.labels.delete'))