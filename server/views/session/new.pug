extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(signInForm, 'email', errors, value =t('views.users.email'))(type="text")
    +input(signInForm, 'password', errors, value =t('views.users.password'))(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))
